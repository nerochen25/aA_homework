<h2><%= @link.title %></h2>
By: <%= @link.user.username %>

<a href="<%= @link.url %>"><%= @link.url %></a>

<h3>Comments</h3>
<ul>
  <% @link.comments.each do |comment| %>
    <li>
      <%= comment.body %>
      <form class="" action="<%= comment_url(comment) %>" method="post">
        <%= auth_token_input %>
        <input type="hidden" name="_method" value="delete">
        <input type="submit" name="" value="Remove Comment">
      </form>
    </li>
  <% end %>
</ul>

<hr>

<h3>Add Comment</h3>

<form action="<%= comments_url %>" method="post">
  <%= auth_token_input %>

  <label>
    Comment
    <input type="text" name="comment[body]" value="">
  </label>

  <input type="submit" value="Add Comment">
</form>

<a href="<%= edit_link_url(@link) %>">Edit Link</a>
<a href="<%= links_url %>">Links</a>
